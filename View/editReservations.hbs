<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/reservations.css">
    <link rel="stylesheet" href="css/editStudentReservations.css">
    <script src="script/editReservations.js" defer></script>
    <title>Reservations</title>
</head>
<body>
    {{> header}}
    <div class="body-container">
        <div id="lab-selection">
            <span>
                <label for="lab">Choose a Lab:</label>
                <select id="lab">
                    <option value="GK304A">GK304A</option>
                    <option value="GK304B">GK304B</option>
                    <option value="GK305A">GK305A</option>
                    <option value="GK305B">GK305B</option>
                    <option value="GK306A">GK306A</option>
                    <option value="GK306B">GK306B</option>
                </select>
            </span>

            <span>
                <label for="date">Select Date:</label>
                <input type="date" id="date">
            </span>

            <span>
                <label for="time">Select Time:</label>
                <select id="time" required>
                </select>
            </span>
            
        </div>
        <button onclick="viewAvailability()">Filter</button>
        <section class="current-reservations">
            <h2>Current Reservations</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Lab</th>
                            <th>Seat Number</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Time and Date requested</th>
                            <th class="edit-reservation">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reservations}}
                            <tr>
                                <td>{{this.lab}}</td>
                                <td>{{this.seat}}</td>
                                <td>{{this.date}}</td>
                                <td>{{this.time}}</td>
                                <td><button>Edit</button></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    <div id="edit-profile-popup" class="popup">
        <div class="popup-content">
            <span class="close" onclick="closeEditProfilePopup()">&times;</span>
            <h2>Edit Profile</h2>
            <form id="edit-profile-form" onsubmit="submitEdit(event)">
                <label for="Lab">Laboratory:</label>
                <input type="text" id="popup-lab" name="full-name" placeholder="Enter your full name"><br>
    
                <label for="Seat Number">Seat Number:</label>
                <input type="text" id="popup-seat"  placeholder="Enter your username"><br>
    
                <label for="Date">Date:</label><br>
                <input type="date" id="popup-date" name="email" placeholder="Enter your email"><br>
    
                <label for="Time">Time Interval:</label>
                <label for="Time">Time Interval:</label>
                <select id="popup-time" name="time">

                </select><br>
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    {{> footer}}
</body>

</html>